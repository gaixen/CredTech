# CredTech Structured Data API Configuration - Sample Template
# Copy this file to .env and update with your actual values

# Database Configuration
DB_TYPE=postgres
DB_URL=postgresql://username:password@localhost:5432/database_name

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_WORKERS=4
API_LOG_LEVEL=info

# Socket.IO Configuration
SOCKET_IO_PORT=5001

# External API Keys (Replace with your actual API keys)
FRED_API_KEY=your_fred_api_key_here
SEC_EDGAR_API_KEY=your_sec_api_key_here
YAHOO_FINANCE_API_KEY=your_yahoo_api_key_here

# Security Configuration (Change these in production!)
SECRET_KEY=change-this-super-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=production

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# CORS Settings
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Cache Configuration (Optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Database Pool Settings (Optional)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# API Documentation (Optional)
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json
